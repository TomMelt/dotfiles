[core]
	editor = vim
	excludesfile = /home/melt/.gitignore
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[alias]
	co = checkout
	sw = switch
	d = difftool --trust-exit-code
	ds = diff --stat
	s = status
	a = add
	c = commit
	sl = stash list
	sm = stash -m
	sp = stash pop
	bd = branch -d
	ba = branch -a
	b = branch
	l = log
	lo = log --oneline
	los = log --oneline --stat
	lon = log --oneline --name-only
[include]
	path = ~/.gitconfig.local
[push]
	default = simple
[pull]
	ff = only
[safe]
	directory = /home/firedrake/firedrake/src/PyOP2
	directory = /home/firedrake/firedrake/src/firedrake
[init]
	defaultBranch = main
